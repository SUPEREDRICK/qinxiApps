  background: white;
  border-radius: 6rpx;
}

.itemBox {
  font-size: 31rpx;
  margin-top:20rpx;
  margin-left: 10rpx;
  height: 53rpx;
  width: 700rpx;
  border-bottom: 1rpx solid rgba(167, 161, 161, 0.11);
}

.itemTitle {
  margin-left: 10rpx;
}

.itemImg {
