/* 设置整个页面的颜色是灰色底色 */
page {
  width: 100%;
  height: 100%;
  background-color: rgba(167, 161, 161, 0.11);
}

.selected {
  width: 20rpx;
  height: 20rpx;
  border: 1rpx solid gray;
  display: inline-block;
  border-radius: 20rpx;
  background-color: #38634f;
}

.mainTitle {
  font-size: 35rpx;
  width: 100%;
  height: 60rpx;
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  color: rgba(128, 128, 128, 0.466);
}

.brand {
   width: 100%;
  height: 60rpx;
}

.item {
  margin-top: 10rpx;
