/* 顶部保证金部分 */
.depositBox {
  width: 100%;
  height: 170rpx;
  border-bottom: 1rpx solid rgba(165, 163, 163, 0.377);
  /* display: flex;
  justify-content: center; */
  text-align: center;
}

.deposit {
  font-size: 30rpx;
  margin:0 auto;
  margin-top: 30rpx;
  margin-left: 25rpx;
}

.price {
  font-size: 40rpx;
  margin-top: 20rpx;
}

.guiding {
  font-size: 36rpx;
  float: right;
  margin-top: 40rpx;
  margin-right: 40rpx;
  color: rgba(128, 128, 128, 0.397); 
}

/* 分割线设置 */
.cuttingLine {
  background-color: #f5f5f5;
  width:100%;
  height: 18rpx;
}

.acItem {
  width: 100%;
  height: 150rpx;
  /* border: 1rpx solid gray; */
}

.itemImg {
  width: 100rpx;
  height: 100rpx;
  margin-top: 25rpx;
  margin-left: 25rpx;
  float: left;
}

.prdName {
  font-size: 30rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
  float: left;
}

.date {
  font-size: 25rpx;
  color: rgba(128, 128, 128, 0.466);
  float: right;
  margin-top: 20rpx;
  margin-right: 10rpx;
}

.auStatusImg {
  width: 40rpx;
  height: 40rpx;
  float: right;
  margin-right: 10rpx;
  margin-top: 28rpx;
}

.statusText {
  float: right;
  font-size: 25rpx;
  margin-right: 40rpx;
